{
  "name": "react-credit-card-flipping",
  "version": "1.0.3",
  "description": "Credit card flipping to ReactJS",
  "main": "src/index.tsx",
  "keywords": [
    "react",
    "reactjs",
    "credit",
    "card",
    "filpping",
    "component"
  ],
  "author": "avrcoelho",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/avrcoelho/react-credit-card-flipping.git"
  },
  "bugs": {
    "url": "https://github.com/avrcoelho/react-credit-card-flipping/issues"
  },
  "homepage": "https://github.com/avrcoelho/react-credit-card-flipping",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.0"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.2",
    "@testing-library/user-event": "^10.0.1",
    "@types/jest": "^25.2.1",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/styled-components": "^5.0.1",
    "commitizen": "^4.0.4",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "24.9.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "react-app-rewired": "^2.1.5",
    "react-scripts": "3.4.1",
    "ts-jest": "^25.3.1",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jest-environment-jsdom-sixteen",
    "coverage": "react-app-rewired test --env=jest-environment-jsdom-sixteen --coverage --watchAll=false",
    "eject": "react-app-rewired eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.spec.ts",
      "**/*.spec.tsx"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "moduleNameMapper": {
      "^~/(.*)": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "!src/index.tsx",
      "!src/App.tsx"
    ],
    "coverageDirectory": "<rootDir>/src/__tests__/coverage"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
